<!DOCTYPE html>
<html lang="en" class="h-100">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="icon" type="image/png" href="~/images/logoPaginas.png" sizes="64x64" style="background-color:black">
    <link rel="icon" type="image/png" href="~/images/logoPaginas.png" sizes="16x16" style="background-color:black">
    <link rel="icon" type="image/png" href="~/images/logoPaginas.png" sizes="32x32" style="background-color:black">

    <environment include="Development">
        <title>@ViewData["Title"] - Desarrollo</title>
        <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css" />
    </environment>

    <environment exclude="Development">
        <title>@ViewData["Title"]</title>
        <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css"
                asp-fallback-href="~/lib/bootstrap/css/bootstrap.css"
                asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
    </environment>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @await RenderSectionAsync("Style", required: false)
</head>

<body class="d-flex flex-column h-100">

    <header>
        <partial name="_navigation.cshtml" />
    </header>

    <main class="flex-shrink-0">
        <div class="transition transition-left-lessthan-100" id="divTransition">
        </div>
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <div class="container">
        <partial name="_CookieConsentPartial" />
    </div>
    
    
    <footer class="footer mt-auto py-3">
        <div class="container">
            <span class="text-muted">&copy; @DateTime.Now.Year - Guillermo Galván Mendoza</span>
        </div>
    </footer>

    <environment include="Development">
        <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    </environment>

    <environment exclude="Development">
        <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    </environment>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
